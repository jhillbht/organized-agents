# Organized AI Environment Configuration
# Copy this file to .env and fill in your values

# === AUTHENTICATION MODE ===

# Choose your authentication method:
# - "claude-max" for Claude Max Plan login (no API key needed)
# - "api-key" for API key authentication
AUTH_MODE=claude-max

# === API KEYS (Optional - only needed if AUTH_MODE=api-key) ===

# Your Anthropic API key for Claude models
# Get one at: https://console.anthropic.com/account/keys
ANTHROPIC_API_KEY=

# OpenAI API key for GPT models (optional)
# Get one at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google API key for Gemini models (optional)
# Get one at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=

# === PATHS & DIRECTORIES ===

# Custom data directory for Organized AI
# Defaults to ~/.organized-ai if not set
ORGANIZED_AI_DATA_DIR=

# Claude Code home directory
# Defaults to ~/.claude if not set
CLAUDE_HOME=

# === FEATURE FLAGS ===

# Enable Plan Mode (experimental)
# Set to "true" to enable, "false" or empty to disable
ENABLE_PLAN_MODE=false

# Enable debug logging
# Set to "true" for verbose logs, "false" or empty for normal logging
DEBUG_MODE=false

# === AGENT CONFIGURATION ===

# Default model for agents
# Options: claude-3-opus, claude-3-sonnet, claude-3-haiku
DEFAULT_AGENT_MODEL=claude-3-sonnet

# Maximum concurrent agents
# Limits how many agents can run simultaneously
MAX_CONCURRENT_AGENTS=3

# Agent timeout in seconds
# How long to wait before timing out an agent task
AGENT_TIMEOUT=300

# === SECURITY ===

# Enable sandboxing for agent execution
# Set to "false" to disable (not recommended)
ENABLE_SANDBOX=true

# Allowed directories for agent file access
# Comma-separated list of absolute paths
ALLOWED_DIRECTORIES=

# === NETWORK ===

# Proxy configuration (if behind corporate firewall)
# Format: http://username:password@proxy.example.com:8080
HTTP_PROXY=
HTTPS_PROXY=

# === TELEMETRY ===

# Disable anonymous usage telemetry
# Set to "true" to opt out
DISABLE_TELEMETRY=false